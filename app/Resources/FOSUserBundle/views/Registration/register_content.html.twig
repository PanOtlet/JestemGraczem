{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="center-block col-md-6" style="float: none;">
        {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
        {{ form_widget(form) }}
        <div>
            <input class="btn btn-danger btn-block" type="submit" value="{{ 'registration.submit'|trans }}" />
        </div>
        {{ form_end(form) }}
        <p style="text-align: justify">
            Rejestrując się potwierdzasz, że zapoznałeś się i zaakceptowałeś <a href="{{ path('homepage') }}">regulamin</a>!
        </p>
    </div>
</div>
