{% extends "material/base.html.twig" %}

{% block bodyMenu %}
    <div class="container">
        {% block adbanner %}{{ parent() }}{% endblock %}
        <div class="row">
            <div class="col-md-3">
                <img src="https://www.gravatar.com/avatar/{{ user.email|md5 }}?s=256" class="img-responsive"
                     alt="{{ user.username }} avatar">
                <p style="text-align: center">
                    {{ user.username }} <br>
                    {% if is_granted('ROLE_ADMIN') %}<span class="tag red">Administrator</span>{% endif %}
                </p>
                <a class="btn btn-success btn-block disabled">Follow</a>
                <p style="font-size: 75%; text-align: justify">
                    {{ user.description }}
                </p>

                <div class="list-group">
                    <a href="javascript:void(0)" class="list-group-item active">
                        <i class="fa fa-bars" aria-hidden="true"></i> Tablica
                    </a>
                    {% if user.beampro %}
                        <a class="list-group-item" data-toggle="modal" data-target="#beamPro">
                            <i class="fa fa-windows" aria-hidden="true"></i> Beam.pro
                        </a>
                        <div class="modal fade" id="beamPro" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <h4 class="modal-title w-100">
                                            {{ user.beampro }} na Beam.pro
                                        </h4>
                                    </div>
                                    <div class="modal-body">
                                        <div class="embed-responsive embed-responsive-16by9">
                                            <iframe src="https://beam.pro/embed/player/{{ user.beampro }}"></iframe>
                                        </div>
                                        <div class="embed-responsive embed-responsive-16by9">
                                            <iframe src="https://beam.pro/embed/chat/{{ user.beampro }}"></iframe>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                    {% if user.twitch %}
                        <a class="list-group-item" data-toggle="modal" data-target="#twitch">
                            <i class="fa fa-windows" aria-hidden="true"></i> Twitch.tv
