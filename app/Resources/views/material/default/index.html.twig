{% extends "material/base.html.twig" %}

{% block beforeBody %}
    {% for event in events %}
        <div class="event">
            {{ event.html|raw }}
            {% if event.javascript %}
                <script>{{ event.javascript|raw }}</script>
            {% endif %}
            {% if event.css %}
                <style>{{ event.css|raw }}</style>
            {% endif %}
            {% if event.buttonUrl %}
                <a target="_blank" href="{{ event.buttonUrl }}"
                   class="btn btn-primary btn-block waves-effect waves-light">
                    {{ event.buttonText }}
                </a>
            {% endif %}
        </div>
    {% endfor %}

    <div class="container-fluid" id="newsMiniatures">
        <div class="row">
            {% for article in articles %}
                {% if loop.first %}
                    <div class="col-md-8">
                        <div class="newsImage">
                            <a href="{{ url('article.id',{'id': article.id, 'title': article.title|replace({' ': '-'})}) }}">
                                <img src="{{ app.request.basePath }}{{ vich_uploader_asset(article, 'imageFile', 'NewsBundle\\Entity\\News') }}"
                                     alt="{{ article.title }}"/>
                                <h2><span>{{ article.title }}</span></h2>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-4">
                {% else %}
                    <div class="newsImage">
                        <a href="{{ url('article.id',{'id': article.id, 'title': article.title|replace({' ': '-'})}) }}">
                            <img src="{{ app.request.basePath }}{{ vich_uploader_asset(article, 'imageFile', 'NewsBundle\\Entity\\News') }}"
                                 alt="{{ article.title }}"/>
                            <h2><span>{{ article.title }}</span></h2>
                        </a>
                    </div>
                {% endif %}
                {% if loop.last %}
                    </div>
                {% endif %}
            {% endfor %}
            <a href="{{ url('articles') }}" class="btn btn-block btn-outline-danger waves-effect">
                Czytaj więcej...
            </a>
        </div>
    </div>
{% endblock %}

    {% block body %}
