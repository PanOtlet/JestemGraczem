{% extends "material/base.html.twig" %}

{% block beforeBody %}
    {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <div class="view hm-black-strong">
            <div class="full-bg-img flex-center">
                <ul>
                    <li>
                        <h1 class="h1-responsive wow fadeInDown" data-wow-delay="0.2s">JestemGraczem.pl</h1></li>
                    <li>
                        <p class="wow fadeInDown">Platforma zrobiona przez graczy dla graczy!</p>
                    </li>
                    <li>
                        <a target="_blank" href="{{ url('fos_user_security_login') }}"
                           class="btn btn-primary btn-lg wow fadeInLeft" data-wow-delay="0.2s">Zaloguj się!</a>
                        <a target="_blank" href="{{ url('fos_user_registration_register') }}"
                           class="btn btn-secondary btn-lg wow fadeInLeft" data-wow-delay="0.2s">Zarejestruj się!</a>
                    </li>
                </ul>
            </div>
        </div>
    {% else %}
        <div id="slider" class="carousel slide carousel-fade" data-ride="carousel">
            <ol class="carousel-indicators">
                {% for slider in sliders %}
                    {% if loop.index == 1 %}
                        <li data-target="#slider" data-slide-to="{{ loop.index0 }}" class="active"></li>
                    {% else %}
                        <li data-target="#slider" data-slide-to="{{ loop.index0 }}" class=""></li>
                    {% endif %}
                {% endfor %}
            </ol>
            <div class="carousel-inner" role="listbox">
                {% for slider in sliders %}
                    {% if loop.index == 1 %}
                        <div class="carousel-item active">
                            <div class="flex-center animated fadeInDown">
                                <ul>
                                    <li>
                                        <h1 class="h1-responsive">{{ slider.title }}</h1>
                                    </li>
                                    <li>
                                        <p>{{ slider.description }}</p>
                                    </li>
                                    <li>
                                        <a target="_blank" href="{{ slider.buttonUrl }}"
                                           class="btn btn-primary btn-lg waves-effect waves-light">{{ slider.buttonText }}</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    {% else %}
                        <div class="carousel-item">
                            <div class="flex-center animated fadeInDown">
                                <ul>
                                    <li>
                                        <h1 class="h1-responsive">{{ slider.title }}</h1>
                                    </li>
                                    <li>
                                        <p>{{ slider.description }}</p>
                                    </li>
                                    <li>
                                        <a target="_blank" href="{{ slider.buttonUrl }}"
                                           class="btn btn-primary btn-lg waves-effect waves-light">{{ slider.buttonText }}</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <a class="left carousel-control" href="#slider" role="button" data-slide="prev">
                <span class="icon-prev" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#slider" role="button" data-slide="next">
                <span class="icon-next" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    {% endif %}
{% endblock %}

{% block body %}
    <div class="divider-new">
        <h2 class="h2-responsive wow bounceIn">Polecane streamy</h2>
    </div>

    <div id="stream-container">
        <div class="container">
            <section id="stream">
                <div class="row">
                    <div class="col-md-8">
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe id="topstream" class="embed-responsive-item"
                                    src="https://beam.pro/embed/player/jestemgraczemtv"></iframe>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <ul class="text-xs-center">
                            <li class="wow fadeInUp" data-wow-delay="0.5s">
                                <img id="avatar" class="img-fluid visible-lg-block"
                                     src="https://www.gravatar.com/avatar/{{ avatar }}?s=25" alt="Gravatar Avatar">
                                <h3 id="display_name" style="margin-top: 30pt" class="h3-responsive tag red">Brak</h3>
                            </li>

                            <li class="wow fadeInUp" data-wow-delay="1.0s">
                                <p id="link" class="tag grey">Niestety nikt nie streamuje :(</p>
                            </li>

                            <li class="wow fadeInUp tag black" data-wow-delay="1.5s">
                                Widzów: <span id="viewers">n/d</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="container-fluid" id="streams-container">

                </div>
            </section>
        </div>
    </div>

    <div class="container-fluid p-t-1">
        {% block adbanner %}{{ parent() }}{% endblock %}
    </div>

    <div id="news">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header danger-color-dark white-text">
                            {{ articles.0.title|slice(0,30) }}...
                        </div>
                        <div class="card-block">
                            <p class="card-text">{{ articles.0.introduction }}</p>
                            <a href="{{ url('article.id',{'id': articles.0.id, 'title': articles.0.title|replace({' ': '-'})}) }}"
                               class="btn btn-danger">Czytaj dalej...</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header danger-color-dark white-text">
                            {{ articles.1.title|slice(0,30) }}...
                        </div>
                        <div class="card-block">
                            <p class="card-text">{{ articles.1.introduction }}</p>
                            <a href="{{ url('article.id',{'id': articles.1.id, 'title': articles.1.title|replace({' ': '-'})}) }}"
                               class="btn btn-danger">Czytaj dalej...</a>
                        </div>
                    </div>
                </div>
            </div>

            <a href="{{ url('articles') }}" class="btn btn-block btn-purple waves-effect">
                Czytaj więcej...
            </a>
        </div>
    </div>

    <div id="media" class="container">
        <div class="row p-t-1">
            <div class="col-md-6">
                {% if meme %}
                    <div class="divider-new">
                        <h2 class="h2-responsive wow bounceIn">
                            {{ 'button.newest.new'|trans }} {{ 'button.newest.meme'|trans }}
                        </h2>
                    </div>
                    <div class="card">
                        {% if meme.url | slice(-4) == '.mp4' or meme.url | slice(-5) == '.webm' %}
                            <div class="embed-responsive embed-responsive-16by9">
                                <video id="promotedMemes" class="video-js embed-responsive-item" controls preload="auto"
                                       data-setup="{}">
                                    <source src="{{ asset('assets/mem/') ~ meme.url }}" type="video/mp4"
                                            class="embed-responsive-item">
                                    <p class="vjs-no-js">
                                        Masz kiepską przeglądarkę! Użyj GOOGLE CHROME!
                                    </p>
                                </video>
                            </div>
                        {% else %}
                            <img class="img-fluid"
                                 src="{{ asset('assets/mem/') ~ meme.url }}" alt="{{ meme.title }}">
                        {% endif %}
                        <div class="card-block">
                            <h4 class="card-title">{{ meme.title }}</h4>
                            <a href="{{ url('mem.id', {'id': meme.id}) }}" class="btn btn-primary">
                                {{ 'button.comments'|trans }}
                            </a>
                            <a href="{{ url('mem') }}" class="btn btn-secondary">
                                {{ 'button.more'|trans }}
                            </a>
                        </div>
                    </div>
                {% endif %}
            </div>
            <div class="col-md-6">
                <div class="divider-new">
                    <h2 class="h2-responsive wow bounceIn">
                        {{ 'button.newest.new'|trans }} {{ 'button.newest.video'|trans }}
                    </h2>
                </div>
                <div class="row">
                    {% for vod in video %}
                        <div class="col-md-6 video">
                            <a href="{{ url('video.id', { 'id':vod.id }) }}" data-toggle="tooltip"
                               title="{{ vod.title }}">
                                <img class="img-responsive"
                                     src="//img.youtube.com/vi/{{ vod.videoid }}/mqdefault.jpg"
                                     alt="{{ vod.title }}">
                            </a>
                        </div>
                    {% endfor %}
                </div>
                <div class="btn-green text-xs-center">
                    <a href="{{ url('video') }}">{{ 'button.more'|trans }}</a>
                </div>
            </div>
        </div>
        <div class="row p-t-2">
            <div class="btn-white-lg dots m-b-1">
                <span class="p-x-1 text">
                    <span style="color: #303030;">
                        Znajdź nas w Social Media oraz YouTube!
                    </span>
                </span>
            </div>
            <div class="col-md-4">
                <div id="fb-root"></div>

                <div class="fb-page" data-href="https://www.facebook.com/jestemgraczempl/" data-small-header="false"
                     data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false">
                    <blockquote cite="https://www.facebook.com/jestemgraczempl/" class="fb-xfbml-parse-ignore"><a
                                href="https://www.facebook.com/jestemgraczempl/">JestemGraczem.pl</a></blockquote>
                </div>
            </div>
            <div class="col-md-4">
                <div class="g-ytsubscribe" data-channelid="UCwyKvaFQcBfJ7dCxM_uX5EQ" data-layout="full"
                     data-count="default"></div>
                <br>
                <div class="g-ytsubscribe" data-channel="PanOtlet" data-layout="full" data-count="default"></div>
            </div>
            <div class="col-md-4">
                <div class="g-page" data-href="//plus.google.com/u/4/116516903644267522146" data-layout="landscape"
                     data-rel="publisher"></div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
    <style>
        .carousel {
            height: 540px;
        }

        @media (max-width: 776px) {
            .carousel {
                height: 100%;
            }
        }

        .carousel-item,
        .active {
            height: 100%;
        }

        .carousel-inner {
            height: 100%;
        }

        {% for slide in sliders %}
        .carousel-item:nth-child({{ loop.index }}) {
            background: url("{{ slide.image }}") no-repeat;
            background-size: cover;
            opacity: 0.4;
        }

        {% endfor %}
    </style>
{% endblock %}

