{% extends "material/base.html.twig" %}

{% block bodyMenu %}
    {% block adbanner %}{{ parent() }}{% endblock %}
    <div class="divider-new">
        <h2 class="h2-responsive wow bounceIn">
            {{ post.title }}
            <small>{{ post.date|date('d/m/Y') }}</small>
        </h2>
    </div>
    <div class="container" style="margin-top: 10px">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-primary text-xs-center z-depth-2">
                    <div class="card-block">
                        <p class="white-text">
                            {{ post.text }}
                        </p>
                    </div>
                </div>
                <div class="fb-like" data-href="{{ url('mikroblog.id',{'id': post.id}) }}"
                     data-layout="standard" data-action="like" data-show-faces="false"
                     data-share="true"></div>
                {% for comment in comments %}
                <hr>
                <div class="media">
                    <a class="media-left waves-light">
                        <img class="rounded-circle" src="https://www.gravatar.com/avatar/{{ comment.email|md5 }}" alt="Generic placeholder image">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading">{{ comment.username }}</h4>
                        <p>{{ comment.text }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
            <div class="col-md-4">
                {% block sidebar %}{{ parent() }}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}