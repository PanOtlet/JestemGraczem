{% extends "material/base.html.twig" %}

{% block body %}
    <div class="divider-new">
        <h2 class="h2-responsive wow bounceIn">
            {{ post.title }}
            <small>{{ post.date|date('d/m/Y') }}</small>
        </h2>
    </div>
    <div class="container" style="margin-top: 10px">
        {% block adbanner %}{{ parent() }}{% endblock %}
        <div class="row">
            <div class="col-md-8">
                <div class="card card-primary text-xs-center z-depth-2">
                    <div class="card-block" style="color: white">
                        {{ post.text|raw }}
                    </div>
                </div>
                <div class="fb-like" data-href="{{ url('mikroblog.id',{'id': post.id}) }}"
                     data-layout="standard" data-action="like" data-show-faces="false"
                     data-share="true"></div>
                {% for comment in comments %}
                <hr>
                <div class="media">
                    <a class="media-left waves-light" href="{{ path('user', {'user': comment.username}) }}">
                        <img class="rounded-circle" src="https://www.gravatar.com/avatar/{{ comment.email|md5 }}" alt="Gravatar Avatar">
                    </a>
                    <div class="media-body">
                        <h4 class="media-heading">{{ comment.username }}</h4>
                        <p>{{ comment.text }}</p>
                    </div>
                </div>
                {% endfor %}
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
            <div class="col-md-4">
                <h4>Autor: {{ post.username }}</h4>
                {% block sidebar %}{{ parent() }}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}