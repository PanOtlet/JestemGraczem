{% extends "base.html.twig" %}

{% block title %}Dodaj film{% endblock %}
{% block titlemeta %}Dodaj{% endblock %}

{% form_theme form ':Form:form.html.twig' %}

{% block menu %}
    <li>
        <a href="{{ path('video') }}">
            <i class="fa fa-youtube" aria-hidden="true"></i> Główna
        </a>
    </li>
    <li>
        <a href="{{ path('video.wait') }}">
            <i class="fa fa-clock-o" aria-hidden="true"></i> Poczekalnia
        </a>
    </li>
    <li>
        <a href="{{ path('video.add') }}">
            <i class="fa fa-plus" aria-hidden="true"></i> Dodaj
        </a>
    </li>
{% endblock %}

{% block content %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock %}
