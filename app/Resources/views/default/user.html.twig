{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}{% endblock %}

{% block content %}
    {{ user.username }}<br/>
    {{ user.battlenet }}<br/>
    {{ user.lol }}<br/>
    {{ user.steam }}<br/>
    {{ user.twitch }}<br/>
    {{ user.youtube }}

    {% if user.twitch %}
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="embed-responsive embed-responsive-16by9">
                    <iframe class="embed-responsive-item" src="https://player.twitch.tv/?channel={{ user.twitch }}"></iframe>
                </div>
            </div>
            <div id="streaminfo" class="panel-footer">
                Gra: <span id="game" class="label label-danger">Ładowanie <i class="fa fa-spinner fa-spin"></i></span>
                Widzów: <span id="viewers" class="label label-danger">Ładowanie <i class="fa fa-spinner fa-spin"></i></span>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function metadata(){
            $.ajax({
                url:'https://api.twitch.tv/kraken/streams/{{ user.twitch }}',
                dataType:'jsonp',
                success:function(channel) {
                    if (channel["stream"] != null) {
                        $("#viewers").html(channel["stream"]["viewers"]);
                        $("#game").html(channel["stream"]["game"]);
                    } else {
                        $("#streaminfo").html('Użytkownik jest offline!');
                    }
                }
            });
        }
        metadata();
        setInterval("metadata();",10000);
    </script>
{% endblock %}