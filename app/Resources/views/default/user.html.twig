{% extends 'base.html.twig' %}

{% block title %}{{ user.username }}{% endblock %}

{% block body %}
    <div class="container-fluid top p-t-3 p-b-2">
        <div class="container">
            <div class="col-sm-6 btn-clear-lg p-l-1 ">
                UŻYTKOWNIK<span style="color: #8bc34a; text-transform: uppercase">{{ user.username }}</span>
            </div>
        </div>
    </div>
    <div class="container p-t-1 p-b-2">
        <div class="row">
            <div class="col-md-4">
                <img src="https://www.gravatar.com/avatar/{{ avatar }}?s=2048" class="img-responsive">
                <div class="btn-white p-y-06 text-ta text-xs-center m-b-0">
                    {{ user.username }}
                </div>
                <div class="grey-box p-y-1 p-l-1 m-b-1">
                    lorep ipsum
                </div>

                <div class="btn-white-lg dots m-b-0">
                    <span class="p-x-1 text"><i class="fa fa-video-camera" aria-hidden="true"></i> MÓJ<span style="color: #303030;">STREAM</span></span>
                </div>
                <div class="grey-box p-y-1 p-l-1 m-b-1">
                    {{ user.username }}
                </div>

                <div class="btn-white-lp dots m-b-0">
                    <span class="p-x-1 text"><i class="fa fa-user" aria-hidden="true"></i> KRÓTKI<span style="color: #303030;">OPIS</span></span>
                </div>
                <div class="grey-box p-y-1 p-l-1 m-b-1">
                    lorep ipsum
                </div>
                <div class="btn-white-lp dots m-b-0">
                    <span class="p-x-1 text"><i class="fa fa-users" aria-hidden="true"></i> TWOJE<span style="color: #303030;">DRUŻYNY</span></span>
                </div>
                <div class="grey-box p-y-1 p-l-1 m-b-1">
                    lorep ipsum
                </div>
            </div>
            <div class="col-md-8">
                <div class="btn-white-lp dots">
                    <span class="p-x-1 text"><i class="fa fa-gamepad" aria-hidden="true"></i> AKTUALNE<span style="color: #303030;">TURNIEJE</span></span>
                </div>

                <div class="btn-white-lg dots">
                    <span class="p-x-1 text"><i class="fa fa-video-camera" aria-hidden="true"></i> NAJNOWSZE<span style="color: #303030;">FILMY</span></span>
                </div>
                <div class="row">
                    {% for vod in video %}
                        <div class="col-md-6 video">
                            <a href="{{ path('video.id', { 'id':vod.id }) }}">
                                <img class="img-responsive"
                                     src="http://img.youtube.com/vi/{{ vod.videoid }}/mqdefault.jpg">
                            </a>
                        </div>
                    {% endfor %}
                </div>
                <div class="btn-green text-xs-center m-b-1">
                    <a href="{{ path('video') }}">Pokaż więcej</a>
                </div>

                <div class="btn-white-lg dots">
                    <span class="p-x-1 text">NAJNOWSZE<span style="color: #303030;">MEMY</span></span>
                </div>
                <img class="img-fluid center-block video p-b-0"
                     src="{{ asset('assets/mem/') ~ meme.url }}" alt="{{ meme.title }}">
                <div class="row p-y-0 m-x-0 grey">
                    <div class="col-xs-1 p-x-0">
                        <img class="img-fluid pull-xl-left p-b-0 grey" src="https://www.gravatar.com/avatar/23?s=48">
                    </div>
                    <div class="col-xs-10 p-l-0">
                        <p class="text-xs-left  m-b-0" style="padding-top: 0.3rem;">
                            <a class="font-weight-bold" href="{{ path('meme.id', {'id': meme.id}) }}" style="color: #000000;font-size: 0.9rem; text-decoration: none;">
                                Zobacz komentarze!
                            </a>
                        </p>
                    </div>
                    <div class="col-xs-1 p-x-0">
                        <img class="img-fluid pull-xs-right p-b-0 grey" src="{{ asset('assets/img/cs_50.png') }}">
                    </div>
                </div>
                <div class="btn-white p-l-1 p-y-06">{{ meme.title }}</div>
                <div class="btn-green text-xs-center m-b-1">
                    <a href="{{ path('meme') }}">Pokaż więcej</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <img src="{{ asset(user.webProfilePicturePath) }}" class="img-responsive">
            </div>
            <div class="col-md-9">
                <h1>{{ user.username }}</h1>
                <div class="row">
                    {% if user.youTube %}
                        <div class="col-md-4">
                            <script src="https://apis.google.com/js/platform.js"></script>
                            <script>
                                function onYtEvent(payload) {
                                    if (payload.eventType == 'subscribe') {
                                        // Add code to handle subscribe event.
                                    } else if (payload.eventType == 'unsubscribe') {
                                        // Add code to handle unsubscribe event.
                                    }
                                    if (window.console) {
                                        window.console.log('YT event: ', payload);
                                    }
                                }
                            </script>
                            <div class="g-ytsubscribe" data-channel="{{ user.youtube }}" data-layout="full"
                                 data-count="default" data-onytevent="onYtEvent"></div>
                        </div>
                    {% endif %}
                    <div class="col-md-8">
                        <ul class="list-group">
                            {% if user.battlenet %}
                                <li class="list-group-item">
                                    <span class="label label-default">Battle.net</span> {{ user.battlenet }}
                                </li>
                            {% endif %}
                            {% if user.lol %}
                                <li class="list-group-item">
                                    <span class="label label-default">LoL</span> {{ user.lol }}
                                </li>
                            {% endif %}
                            {% if user.steam %}
                                <li class="list-group-item">
                                    <span class="label label-default">Steam</span> <a href="{{ user.steam }}">LINK</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {% if user.twitch %}
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="embed-responsive embed-responsive-16by9">
                        <iframe class="embed-responsive-item"
                                src="https://player.twitch.tv/?channel={{ user.twitch }}"></iframe>
                    </div>
                </div>
                <div id="streaminfo" class="panel-footer">
                    Gra: <span id="game" class="label label-danger">Ładowanie <i class="fa fa-spinner fa-spin"></i></span>
                    Widzów: <span id="viewers" class="label label-danger">Ładowanie <i
                                class="fa fa-spinner fa-spin"></i></span>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function metadata() {
            $.ajax({
                url: 'https://api.twitch.tv/kraken/streams/{{ user.twitch }}',
                dataType: 'jsonp',
                success: function (channel) {
                    if (channel["stream"] != null) {
                        $("#viewers").html(channel["stream"]["viewers"]);
                        $("#game").html(channel["stream"]["game"]);
                    } else {
                        $("#streaminfo").html('Użytkownik jest offline!');
                    }
                }
            });
        }
        metadata();
        setInterval("metadata();", 10000);
    </script>
{% endblock %}