    <footer class="p-y-1">
        <p class="text-xs-center m-y-0">
            Copyright &copy; {{ "now"|date('Y') }} <span style="color: #000000">JestemGraczem.pl</span>
        </p>
    </footer>
{% endblock %}

{% block javascripts %}
    <script async src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script async src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
    <script async src="https://use.fontawesome.com/c0b3ee6d21.js"></script>
{% endblock %}

{{ include('adblock.html.twig') }}

</body>
</html>
