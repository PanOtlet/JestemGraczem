{% block navbar %}
    {# Górny Navbar logowania #}
    <nav class="navbar navbar-dark bg-inverse">
        <div class="container">
            <button type="button" class="navbar-toggler hidden-sm-up" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div id="navbar">
                    <nav class="nav navbar-nav pull-xs-left">
                        <p>
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                        </p>
                    </nav>
                    <nav class="nav navbar-nav pull-xs-right">
                        <p>
                            <a href="{{ path('user',{'user': app.user.username}) }}">
                                <i class="fa fa-user"
                                   aria-hidden="true"></i> {{ 'profile.publicprofil'|trans({}, 'FOSUserBundle') }}
                            </a>
                            <a href="{{ path('fos_user_profile_show') }}">
                                <i class="fa fa-user-secret"
                                   aria-hidden="true"></i> {{ 'profile.profil'|trans({}, 'FOSUserBundle') }}
                            </a>
                            <a href="{{ path('fos_user_change_password') }}">
                                <i class="fa fa-key"
                                   aria-hidden="true"></i> {{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}
                            </a>
                            <a href="{{ path('fos_user_profile_edit') }}">
                                <i class="fa fa-pencil"
                                   aria-hidden="true"></i> {{ 'profile.edit.edit'|trans({}, 'FOSUserBundle') }}
                            </a>
                            <a href="{{ path('fos_user_security_logout') }}">
                                <i class="fa fa-sign-out"
                                   aria-hidden="true"></i> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </p>
                    </nav>
                </div>

            {% else %}
                <div id="navbar">
                    <nav class="nav navbar-nav pull-xs-left">
                        <p>
                            Dołącz do społeczności graczy!
                            <a href="{{ path('fos_user_registration_register') }}">
                                <span>Zarejestruj się</span>
                            </a> już teraz!
                            <a href="{{ path('fos_user_resetting_request') }}">
                                <span>Zapomniałeś hasła?</span>
                            </a>
                        </p>
                    </nav>
                    <nav class="nav navbar-nav pull-xs-right">
                        <p>
                            <a href="{{ path('fos_user_security_login') }}" class="p-r-1">
                                <i class="fa fa-user"
                                   aria-hidden="true"></i> {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
                            </a>
                            <a href="{{ path('fos_user_registration_register') }}">
                                <i class="fa fa-user-plus"
                                   aria-hidden="true"></i> {{ 'layout.register'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </p>
                    </nav>
                </div>
            {% endif %}
        </div>
    </nav>

    {# Główny navbar mobilny #}
    <nav class="navbar hidden-lg-up navbar-light nav-green">
        <button class="navbar-toggler hidden-lg-up pull-xs-left" type="button" data-toggle="collapse"
                data-target="#exCollapsingNavbar2">
            &#9776;
        </button>
        <div class="collapse navbar-toggleable-md" id="exCollapsingNavbar2">
            <a class="navbar-brand" href="{{ path('homepage') }}">
                <img class="img-fluid" src="{{ asset('assets/img/Logo.png') }}">
            </a>
            <ul class="nav navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" data-toggle="modal" data-target="#tournaments">
                        <p style=" font-weight: bold; color: #303030;" class="p-l-1">
                            TOURNAMENTS<span style="color: #e91e63">AREA</span>
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="modal" data-target="#games">
                        <p style="font-weight: bold; color: #303030;" class="p-l-1">
                            GAMES<span style="color: #ff9800">AREA</span>
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="modal" data-target="#fans">
                        <p style=" font-weight: bold; color: #303030;" class="p-l-1">
                            FANS<span style="color: #8bc34a">AREA</span>
                        </p>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    {# Główny Navbar desktop #}
    <nav class="hidden-md-down" style="margin-bottom: -16px;">
        <div style="background-color: #8bc34a; margin-bottom: -40px; height: 40px"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 p-x-0" style="height: 56px">
                    <div class="trap">
                        <div class="trap-">
                            <a href="{{ path('homepage') }}">
                                <img class="" src="{{ asset('assets/img/Logo1.png') }}" style="padding: 4px 4px;width: 100%;margin-top: -5px;">
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 p-x-0">
                    <div class="t-45 first">
                    <a data-toggle="modal" data-target="#tournaments">
                        <p class="t45 p-l-1" style="font-weight: bold; color: #303030;">
                            TOURNAMENTS<span style="color: #e91e63">AREA</span>
                        </p>
                    </a>
                </div>
                </div>
                <div class="col-md-3 p-x-0">
                    <div class="t-45">
                    <a data-toggle="modal" data-target="#games">
                        <p class="t45 p-l-1" style=" font-weight: bold; color: #303030;">
                            GAMES<span style="color: #ff9800">AREA</span>
                        </p>
                    </a>
                    </div>
                </div>
                <div class="col-md-3 p-x-0">
                    <div class="t-45 last">
                    <a data-toggle="modal" data-target="#fans">
                        <p class="t45 p-l-1" style="font-weight: bold; color: #303030;">
                            FANS<span style="color: #8bc34a">AREA</span>
                        </p>
                    </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    {# Modale #}
    <div id="tournaments" class="modal fade">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">TOURNAMENTSAREA</h4>
                </div>
                <div class="modal-body">
                    <a href="{{ path('tournament') }}" type="button" class="btn btn-primary btn-lg btn-block">Turnieje</a>
                    <a href="{{ path('team') }}" type="button" class="btn btn-primary btn-lg btn-block">Drużyny</a>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <div id="games" class="modal fade">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">GAMESAREA</h4>
                </div>
                <div class="modal-body">
                    <a href="{{ path('news') }}" type="button" class="btn btn-primary btn-lg btn-block">Newsy</a>
                    <a href="{{ path('news.add') }}" type="button" class="btn btn-primary btn-lg btn-block">Dodaj RSS</a>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <div id="fans" class="modal fade">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">FANSAREA</h4>
                </div>
                <div class="modal-body">
                    <a href="{{ path('meme') }}" type="button" class="btn btn-primary btn-lg btn-block">Memy</a>
                    <a href="{{ path('stream') }}" type="button" class="btn btn-primary btn-lg btn-block">Streamy</a>
                    <a href="{{ path('video') }}" type="button" class="btn btn-primary btn-lg btn-block">Filmy</a>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}{% endblock %}

