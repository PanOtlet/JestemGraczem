<!DOCTYPE html>
<html>
<head>
    {{ sonata_seo_metadatas() }}

    <title>{% block title %}Strona główna{% endblock %} :: JestemGraczem.pl</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    {% endblock %}

    {% block head %}{% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body style="visibility: hidden !important;">

<div id="babasbmsgx" style="visibility: visible !important;">
    Please disable your adblock and script blockers to view this page
</div>

{% block navbar %}
    {# Górny Navbar logowania #}
    <nav class="navbar navbar-dark bg-inverse">
        <div class="container">
            <button type="button" class="navbar-toggler hidden-sm-up" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div id="navbar">
                    <nav class="nav navbar-nav pull-xs-left">
                        <p>
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                        </p>
                    </nav>
                    <nav class="nav navbar-nav pull-xs-right">
                        <p>
                            <a href="{{ path('user',{'user': app.user.username}) }}">
                                <i class="fa fa-user"
                                   aria-hidden="true"></i> {{ 'profile.publicprofil'|trans({}, 'FOSUserBundle') }}
                            </a>
                            <a href="{{ path('fos_user_profile_show') }}">
                                <i class="fa fa-user-secret"
                                   aria-hidden="true"></i> {{ 'profile.profil'|trans({}, 'FOSUserBundle') }}
                            </a>
                            <a href="{{ path('fos_user_change_password') }}">
                                <i class="fa fa-key"
                                   aria-hidden="true"></i> {{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}
                            </a>
                            <a href="{{ path('fos_user_profile_edit') }}">
                                <i class="fa fa-pencil"
                                   aria-hidden="true"></i> {{ 'profile.edit.edit'|trans({}, 'FOSUserBundle') }}
                            </a>
                            <a href="{{ path('fos_user_security_logout') }}">
                                <i class="fa fa-sign-out"
                                   aria-hidden="true"></i> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </p>
                    </nav>
                </div>

            {% else %}
                <div id="navbar">
                    <nav class="nav navbar-nav pull-xs-left">
                        <p>
                            Dołącz do społeczności graczy!
                            <a href="{{ path('fos_user_registration_register') }}">
                                <span>Zarejestruj się</span>
                            </a> już teraz!
                            <a href="{{ path('fos_user_resetting_request') }}">
                                <span>Zapomniałeś hasła?</span>
                            </a>
                        </p>
                    </nav>
                    <nav class="nav navbar-nav pull-xs-right">
                        <p>
                            <a href="{{ path('fos_user_security_login') }}" class="p-r-1">
                                {{ 'layout.login'|trans({}, 'FOSUserBundle') }}
                            </a>
                            <a href="{{ path('fos_user_registration_register') }}">
                                {{ 'layout.register'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </p>
                    </nav>
                </div>
            {% endif %}
        </div>
    </nav>

    {% for flash_message in app.session.flashBag.get('danger') %}
        <div class="alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{ flash_message }}
        </div>
    {% endfor %}

    {# Główny navbar mobilny #}
    <nav class="navbar hidden-lg-up navbar-light nav-green">
        <button class="navbar-toggler hidden-lg-up pull-xs-left" type="button" data-toggle="collapse"
                data-target="#exCollapsingNavbar2">
            &#9776;
        </button>
        <div class="collapse navbar-toggleable-md" id="exCollapsingNavbar2">
            <a class="navbar-brand" href="#">
                <img class="img-fluid" src="{{ asset('assets/img/Logo.png') }}">
            </a>
            <ul class="nav navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" data-toggle="modal" data-target="#turnaments">
                        <p style=" font-weight: bold; color: #303030;" class="p-l-1">
                            TOURNAMENTS<span style="color: #e91e63">AREA</span>
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="modal" data-target="#games">
                        <p style="font-weight: bold; color: #303030;" class="p-l-1">
                            GAMES<span style="color: #ff9800">AREA</span>
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="modal" data-target="#fans">
                        <p style=" font-weight: bold; color: #303030;" class="p-l-1">
                            FANS<span style="color: #8bc34a">AREA</span>
                        </p>
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    {# Główny Navbar desktop #}
    <nav class="hidden-md-down" style="margin-bottom: -16px;">
        <div style="background-color: #8bc34a; margin-bottom: -40px; height: 40px"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 t-45" style="height: 56px">
                    <img class="t45" src="{{ asset('assets/img/Logo1.png') }}" style="padding: 4px 4px; width: 100%">
                </div>
                <div class="col-md-3 t-45">
                    <a data-toggle="modal" data-target="#turnaments">
                        <p class="t45 p-l-1" style="font-weight: bold; color: #303030;">
                            TOURNAMENTS<span style="color: #e91e63">AREA</span>
                        </p>
                    </a>
                </div>
                <div class="col-md-3 t-45">
                    <a data-toggle="modal" data-target="#games">
                        <p class="t45 p-l-1" style=" font-weight: bold; color: #303030;">
                            GAMES<span style="color: #ff9800">AREA</span>
                        </p>
                    </a>
                </div>
                <div class="col-md-3 t-45 last">
                    <a data-toggle="modal" data-target="#fans">
                        <p class="t45 p-l-1" style="font-weight: bold; color: #303030;">
                            FANS<span style="color: #8bc34a">AREA</span>
                        </p>
                    </a>
                </div>
            </div>
        </div>
    </nav>

    {# Modale #}
    <div id="turnaments" class="modal fade">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">"PRO" GEMERS</h4>
                </div>
                <div class="modal-body">
                    <p>KUPA</p>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <div id="games" class="modal fade">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">May the Gaben by with you </h4>
                </div>
                <div class="modal-body">
                    <p>all your bases all now belong to us</p>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <div id="fans" class="modal fade">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Delikatny szum powietrza</h4>
                </div>
                <div class="modal-body">
                    <p>Dla wentylatorów</p>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}{% endblock %}

