{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid top p-t-3 p-b-2">
        <div class="container">
            <div class="col-sm-6 btn-clear-lg p-l-1 ">
                <span style="color: #8bc34a;">Turnieje</span>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="col-md-8">
            <div class="btn-group">
                <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Gra
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="{{ app.request.baseUrl }}{{ app.request.pathInfo }}?sort=1">Counter-Strike: Global Offensive</a>
                    <a class="dropdown-item" href="{{ app.request.baseUrl }}{{ app.request.pathInfo }}?sort=2">Gra</a>
                    <a class="dropdown-item" href="{{ app.request.baseUrl }}{{ app.request.pathInfo }}?sort=3">Gra-Strike: Global Offensive</a>
                    <a class="dropdown-item" href="{{ app.request.baseUrl }}{{ app.request.pathInfo }}?sort=4">Counter-Gra: Global Offensive</a>
                    <a class="dropdown-item" href="{{ app.request.baseUrl }}{{ app.request.pathInfo }}?sort=5">Counter-Strike: Gra Offensive</a>
                    <a class="dropdown-item" href="{{ app.request.baseUrl }}{{ app.request.pathInfo }}?sort=6">Counter-Strike: Global Gra</a>
                    <a class="dropdown-item" href="{{ app.request.baseUrl }}{{ app.request.pathInfo }}?sort=7">Gra</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ app.request.baseUrl }}{{ app.request.pathInfo }}?sort=0">Inne</a>
                </div>
            </div>
            {% for turniej in turnieje %}
                <div class="container">
                    <div class="row m-t-1" style="background-color: #eaeaea">
                        <a href="{{ url('tournament.id',{'id': turniej.id}) }}">
                            <div class="col-md-12 p-x-0">
                                <div class="btn-white-lp dots m-b-0" style="border-left: 0px; border-right: 0px">
                                    <span class="p-x-1 text">{{ turniej.name }}</span>
                                </div>
                                <div class="grey-box p-y-1 p-l-1 m-b-1 ">
                                    <p>{{ turniej.description | slice(0,300) }}</p>

                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-md-4">
            {% block sidebar %}{{ parent() }}{% endblock %}
        </div>
    </div>
{% endblock %}
