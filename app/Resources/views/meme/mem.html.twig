{% extends 'all.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="meme jumbotron">
            <div class="m-title">
                <h2>{{ mem.title }} </h2>
            </div>
            <div class="m-img">
                <img src="{{ asset('assets/mem/') ~ mem.file }}" alt="" class="img-responsive">
            </div>
            <div class="m-bottom">
                <small>{{ mem.date.date|date('d/m/Y') }}</small>
            </div>
            <div id="fb-root"></div>
            <script>(function(d, s, id) {
                    var js, fjs = d.getElementsByTagName(s)[0];
                    if (d.getElementById(id)) return;
                    js = d.createElement(s); js.id = id;
                    js.src = "//connect.facebook.net/pl_PL/sdk.js#xfbml=1&version=v2.6&appId=1792775277616619";
                    fjs.parentNode.insertBefore(js, fjs);
                }(document, 'script', 'facebook-jssdk'));</script>
            <div class="fb-comments" data-href="{{ absolute_url(path('meme.id', {'id': mem.id})) }}" data-numposts="10"></div>
        </div>
    </div>
{% endblock %}