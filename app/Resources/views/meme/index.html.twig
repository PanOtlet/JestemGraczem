{% extends 'base.html.twig' %}

{% block body %}
    <div class="container p-t-5 p-b-2">
        <div class="row">
            <div class="col-md-8">
                {% if meme %}
                    {% for mem in meme %}
                        <div class="meme jumbotron">
                            <div class="m-title">
                                <a href="{{ path('meme.id',{'id': mem.id}) }}">
                                    <h3>
                                        {{ mem.title|slice(0,50) }}
                                        <div class="fb-like" data-href="{{ path('meme.id',{'id': mem.id}) }}"
                                             data-layout="standard" data-action="like" data-show-faces="false"
                                             data-share="true"></div>
                                    </h3>
                                </a>
                            </div>
                            <div class="m-img">
                                <a href="{{ path('meme.id',{'id': mem.id}) }}">
                                    <img src="{{ asset('assets/mem/') ~ mem.url }}" alt="" class="img-responsive">
                                </a>
                            </div>
                            <div class="m-bottom">
                                <small>{{ mem.date.date|date('d/m/Y') }}</small>
                            </div>
                        </div>
                    {% endfor %}
                    <div class="row">
                        <div class="col-md-6">
                            {% if page > 0 %}
                                <a href="{{ path('meme',{'page': page-1}) }}" class="btn btn-raised btn-danger btn-block">Poprzednie</a>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <a href="{{ path('meme',{'page': page+1}) }}"
                               class="btn btn-raised btn-danger btn-block">Kolejne</a>
                        </div>
                    </div>
                {% else %}
                    <h1>Brak mem√≥w :( Smutek.jpg</h1>
                {% endif %}
            </div>
            <div class="col-md-4">
                <a href="{{ path('meme.add') }}" type="button" class="btn btn-primary btn-lg btn-block">Dodaj nowy</a>
                {{ include('navbar.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}