{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid top p-t-3 p-b-2">
        <div class="container">
        <div class="col-sm-6 btn-clear-lg p-l-1 ">
            <span style="color: #8bc34a;">{{ 'button.newest.new'|trans }}</span>{{ 'button.newest.meme'|trans }}
        </div>
        <div class="col-sm-6">
            <a href="{{ url('meme.add') }}" type="button" class="btn btn-green pull-sm-right"><span class="p-x-3">{{ 'button.add'|trans }}</span></a>
        </div>
        </div>
    </div>
    <div class="container p-t-5 p-b-2">
        {% block adbanner %}{{ parent() }}{% endblock %}
        <div class="row">
            <div class="col-md-6">
                {% if meme %}
                    {% for mem in meme %}
                        {% if mem.url | slice(-4) == '.gif' %}
                            <div class="meme">
                                <div class="m-title">
                                    <a class="text-center" href="{{ url('meme.id',{'id': mem.id}) }}">
                                        <h3 class="m-b-0">
                                            {{ mem.title|slice(0,50) }}
                                        </h3>
                                    </a>
                                </div>
                                <div class="m-img gif">
                                    <img src="{{ asset('assets/mem/') ~ mem.url }}" data-entry-url="{{ asset('assets/mem/') ~ mem.url | slice(-4)}}"
                                         data-state= "static" class="img-responsive pull-xs-left video p-b-0"
                                         alt="{{ mem.title }}"/>
                                </div>
                                <div class="m-bottom">
                                    <div class="fb-like" data-href="{{ url('meme.id',{'id': mem.id}) }}"
                                         data-layout="standard" data-action="like" data-show-faces="false"
                                         data-share="true">
                                    </div>
                                </div>
                            </div>
                        {% else %}
                        <div class="meme">
                            <div class="m-title">
                                <a class="text-center" href="{{ url('meme.id',{'id': mem.id}) }}">
                                    <h3 class="m-b-0">
                                        {{ mem.title|slice(0,50) }}
                                    </h3>
                                </a>
                            </div>
                            <div class="m-img">
                                <a href="{{ url('meme.id',{'id': mem.id}) }}">
                                    <img src="{{ asset('assets/mem/') ~ mem.url }}" alt="{{ mem.title|slice(0,50) }}" class="img-responsive pull-xs-left video p-b-0">
                                </a>
                            </div>
                            <div class="m-bottom">
                                <div class="fb-like" data-href="{{ url('meme.id',{'id': mem.id}) }}"
                                     data-layout="standard" data-action="like" data-show-faces="false"
                                     data-share="true">
                                </div>
                            </div>
                        </div>
                        {% endif %}
                    {% endfor %}
                    <div class="row">
                        <div class="col-md-6">
                            {% if page > 0 %}
                                <a href="{{ url('meme',{'page': page-1}) }}" class="btn btn-raised btn-danger btn-block">{{ 'button.prev'|trans }}</a>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <a href="{{ url('meme',{'page': page+1}) }}"
                               class="btn btn-raised btn-danger btn-block">{{ 'button.next'|trans }}</a>
                        </div>
                    </div>
                {% else %}
                    <h1>Brak mem√≥w :( Smutek.jpg</h1>
                {% endif %}
            </div>
            <div class="col-md-3 hidden-sm">
                <span class="label label-pill label-danger center-block">Polecane!</span>
                {% for mem in promoted %}
                    <a href="{{ url('meme.id',{'id': mem.id}) }}">
                        <img src="{{ asset('assets/mem/') ~ mem.url }}" alt="{{ mem.title }}" class="img-rounded img-responsive" style="margin-top: 10px">
                    </a>
                {% endfor %}
            </div>
            <div class="col-md-3">
                <a href="{{ url('meme.wait') }}" type="button" class="btn btn-green btn-block"><span class="p-x-3">{{ 'button.waitingroom'|trans }}</span></a>
                {% block sidebar %}
                    {{ parent() }}
                {% endblock %}
                {% block adsidebar %}{{ parent() }}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}