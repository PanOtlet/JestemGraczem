{% extends "base.html.twig" %}

{% block body %}
    <div class="container-fluid top p-t-3 p-b-2">
        <div class="container">
            <div class="col-sm-12 btn-clear-lg p-l-1 ">
                Your<span style="color: #8bc34a;">Game</span>Center
            </div>
        </div>
    </div>
    <div class="container p-t-5 p-b-2">
        {% for game in games %}
            <a href="{{ url(game.url) }}">
                <img src="{{ asset('assets/img/') ~ game.img }}" class="img-responsive" alt="{{ game.title }}">
                {{ game.title }}
            </a>
        {% endfor %}
    </div>
{% endblock %}