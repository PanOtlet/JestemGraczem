{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid top p-t-3 p-b-2">
        <div class="container">
            <div class="col-sm-6 btn-clear-lg p-l-1 ">
                <span style="color: #8bc34a;">Drużyny</span>
            </div>
            <div class="col-sm-6">
                <a href="{{ url('team.add') }}" type="button" class="btn btn-green pull-sm-right"><span class="p-x-3">Dodaj nową</span></a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="col-md-8">
            {% if teams %}
                {% for team in teams %}
                    <div class="container">
                        <div class="row m-t-1" style="background-color: #eaeaea">
                            <a href="{{ url('team',{'tag': team.tag}) }}">
                            <div class="col-md-4 p-x-0">
                                <img src="{{ asset(team.webPath) }}" class="img-responsive b-rp">
                            </div>
                            <div class="col-md-8 p-x-0">
                                <div class="btn-white-lp dots m-b-0" style="border-left: 0px; border-right: 0px">
                                    <span class="p-x-1 text">{{ team.name }} <span style="color: #303030;"> {{ team.tag }}</span></span>
                                </div>
                                <div class="grey-box p-y-1 p-l-1 m-b-1 ">
                                    <p>{{ team.shortdesc }}</p>

                                </div>
                            </div>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <h1>Brak Drużyn :( Smutek.jpg</h1>
            {% endif %}
        </div>
        <div class="col-md-4">
            {{ include('navbar.html.twig') }}
        </div>
    </div>
{% endblock %}
