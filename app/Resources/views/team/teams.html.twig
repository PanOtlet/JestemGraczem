{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid top p-t-3 p-b-2">
        <div class="container">
            <div class="col-sm-6 btn-clear-lg p-l-1 ">
                <span style="color: #8bc34a;">Drużyny</span>
            </div>
            <div class="col-sm-6">
                <a href="{{ path('team.add') }}" type="button" class="btn btn-green pull-sm-right"><span class="p-x-3">Dodaj nową</span></a>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="jumbotron t-title">
            <h1>Drużyny</h1>
        </div>
        {% if teams %}
            {% for team in teams %}
                <div class="col-md-4">
                    <div class="jumbotron teams">
                        <div class="t-img">
                            <a href="{{ path('team',{'tag': team.tag}) }}">
                                <img src="{{ asset(team.webPath) }}" class="img-responsive">
                            </a>
                        </div>
                        <div class="t-title">
                            <a href="{{ path('team',{'tag': team.tag}) }}">
                                <h3>
                                    {{ team.name }}
                                </h3>
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <h1>Brak Drużyn :( Smutek.jpg</h1>
        {% endif %}
    </div>
{% endblock %}
