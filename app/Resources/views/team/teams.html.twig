{% extends "base.html.twig" %}

{% block title %}TurniejBundle:Team:team{% endblock %}

{% block content %}
    {% if teams %}
            {% for team in teams %}
                <div class="meme jumbotron">
                    <div class="t-title">
                        <a href="{{ path('team',{'tag': team.tag}) }}">
                            <h3>
                                {{ team.name }}
                            </h3>
                        </a>
                    </div>
                    <div class="t-img">
                        <a href="{{ path('team',{'tag': team.tag}) }}">
                            <img src="https://www.gravatar.com/avatar/{{ team.logo }}?s=160" class="img-responsive">
                        </a>
                    </div>
                </div>
            {% endfor %}
    {% else %}
        <h1>Brak mem√≥w :( Smutek.jpg</h1>
    {% endif %}

{% endblock %}
